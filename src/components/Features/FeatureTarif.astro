---
import type { FeatureTarifProps } from "@app-types/features";
import { resolveUrl } from "@lib/urlHelpers";

const { features } = Astro.props as FeatureTarifProps;
---

<section class="section-container tarifs">
  <div class="features">
    {
      features.map((feature) => (
        <article class="feature">
          <div class="feature__img">
            <img src={resolveUrl(feature.icon)} alt={feature.title} />
          </div>
          <h3>{feature.title}</h3>
          <p set:html={feature.description} />
        </article>
      ))
    }
  </div>
</section>

<style lang="scss">
  .tarifs {
    text-align: center;
    background-color: var(--color-secondary);
    padding: var(--space-4) 0;

    .features {
      display: flex;
      flex-direction: column;
      gap: var(--space-3);
      align-items: center;

      .feature {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;

        h3 {
          margin: var(--space-2) 0 var(--space-1);
          color: var(--color-primary);
          font-size: var(--step-0);
          font-weight: 600;
        }

        p {
          margin: 0;
          padding: 0 var(--space-6);
          color: var(--color-base-content);
          font-size: var(--step--2);

          :global(.bold) {
            font-weight: 700;
          }
        }
      }
    }
  }
</style>
