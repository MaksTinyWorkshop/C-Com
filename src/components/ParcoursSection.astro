---
import Icon from "./Icons/Icon.astro";
import Spacer from "./UI/Spacer.astro";
import type { ParcoursSectionProps } from "@app-types/parcours";

const { title, description, steps } = Astro.props as ParcoursSectionProps;
---

<section class="section-container parcours">
  <Spacer size="6rem" axis="vertical" />
  <ol class="parcours__list">
    {
      steps.map((step, index) => (
        <li class="parcours__item">
          <div class="parcours__itemInner">
            {step.icon && (
              <div class="icon" aria-hidden="true">
                <Icon type={step.icon} size={18} color="var(--color-primary)" />
              </div>
            )}
            <article class="parcours__card">
              <h3>
                <span class="parcours__step">Ã‰tape {index + 1} -</span>
                {step.title}
              </h3>
              <p>{step.description}</p>
            </article>
          </div>
        </li>
      ))
    }
  </ol>
  <Spacer size="6rem" axis="vertical" />
  <div class="chiffres">
    <h2>{title}</h2>
    {description && <p set:html={description} />}
  </div>
</section>

<style lang="scss">
  .parcours {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;

    &__list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: var(--space-6);
      width: 100%;
      max-width: 340px;
    }

    &__item {
      position: relative;
      display: flex;
      justify-content: center;
    }

    &__itemInner {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      position: relative;

      .icon {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    }

    &__card {
      background: var(--color-base-100);
      box-shadow: var(--shadow-lg);
      border-radius: 1.75rem;
      padding: clamp(1.75rem, 5vw, 2.5rem);
      max-width: 440px;
      text-align: center;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;

      h3 {
        margin-top: var(--space-3);
        font-size: var(--step-2);
        font-weight: 600;
        color: var(--color-primary);
      }

      p {
        margin: 0;
        color: var(--color-neutral-content);
        font-size: var(--step--2);
        line-height: 1.6;
        text-align: justify;
      }
    }

    &__step {
      margin: 0;
      font-size: 0.9rem;
      font-weight: 400;
      color: var(--color-primary);
    }

    .chiffres {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      background-color: var(--color-primary);
      color: var(--color-base-100);
      padding: var(--space-5) var(--space-3);

      h2 {
        margin: 0;
        font-size: var(--step-3);
        font-weight: 600;
      }

      p {
        margin: 0;
        padding: 0 var(--space-5);
        font-size: var(--step--1);
        text-transform: uppercase;
        font-weight: 700;

        :global(.source) {
          display: block;
          font-weight: 200;
        }
      }
    }
  }

  @media (min-width: 768px) {
    .parcours {
      &__list {
        flex-direction: row;
        justify-content: center;
        align-items: stretch;
        gap: clamp(2rem, 3vw, 3rem);
        max-width: 1100px;
      }

      &__item {
        flex: 1;
      }

      &__itemInner {
        align-items: flex-start;
      }

      &__card {
        padding: clamp(2rem, 3vw, 2.5rem);
        text-align: left;
        max-width: none;
        min-height: clamp(280px, 32vw, 320px);

        h3 {
          margin-top: var(--space-2);
        }

        p {
          font-size: var(--step--1);
        }
      }
    }

    .chiffres {
      width: 100%;
      padding: var(--space-5);
    }
  }

  @media (min-width: 1080px) {
    .parcours {
      &__list {
        gap: clamp(2.5rem, 3vw, 3.5rem);
      }

      &__item {
        flex: 1;
      }

      &__card {
        min-height: clamp(300px, 28vw, 340px);
      }
    }
  }
</style>
