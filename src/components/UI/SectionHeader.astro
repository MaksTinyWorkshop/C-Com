---
import type { SectionHeaderProps } from "@app-types/section";

const {
  title,
  description,
  eyebrow,
  class: className,
  headingLevel = "h2",
  as = "div",
} = Astro.props as SectionHeaderProps;

const resolvedClass = ["section-header", className].filter(Boolean).join(" ");
---

<component is={as} class={resolvedClass}>
  {eyebrow && <span class="eyebrow">{eyebrow}</span>}
  <component is={headingLevel} class="title">
    {title}
  </component>
  {description && <p class="description">{description}</p>}
</component>

<style lang="scss">
  .section-header {
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;

    .eyebrow {
      font-size: var(--step--2);
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      color: var(--color-primary);
    }

    .title {
      margin: var(--space-2) 0 var(--space-5);
      color: var(--color-primary);
      font-size: var(--step-2);
    }

    .description {
      margin: 0;
      color: var(--color-neutral-content);
      font-size: var(--step--1);
    }
  }
</style>
