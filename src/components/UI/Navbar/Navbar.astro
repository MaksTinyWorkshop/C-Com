---
import Spacer from "@components/UI/Spacer.astro";
import styles from "./navbar.module.scss";
import Icon from "@components/Icons/Icon.astro";
import { mainNavigation, companyDetails } from "@lib/siteData";
import { resolveUrl, stripBaseFromPath } from "@lib/urlHelpers";
import CtaDevis from "@components/CTAs/CTADevis/CtaDevis.astro";

const resolveHref = (path: string) => resolveUrl(path || "/");

const currentPath = stripBaseFromPath(Astro.url.pathname);

const contactItems = companyDetails.contactItems ?? [];
const logoAsset = (() => {
  const primaryLogo = companyDetails.logos?.[0];
  if (!primaryLogo) {
    return { url: "", alt: "" };
  }
  return {
    url: resolveUrl(primaryLogo.source.src),
    alt: primaryLogo.source.alt,
  };
})();

const menuLogo = (() => {
  const fullLogo = companyDetails.logos?.find((logo) =>
    logo.name.toLowerCase().includes("full")
  );
  return fullLogo
    ? {
        url: resolveUrl(fullLogo.source.src),
        alt: fullLogo.source.alt,
      }
    : logoAsset;
})();

const linkedInLink =
  companyDetails.socialLinks?.find(
    (link) =>
      link.icon === "linkedin" || link.name.toLowerCase().includes("linkedin")
  ) ?? null;

const menu = mainNavigation.map((item) => {
  const targetPath = item.path;
  const href = resolveHref(targetPath);
  const active =
    targetPath === "/"
      ? currentPath === "/"
      : currentPath.startsWith(targetPath);
  return {
    ...item,
    href,
    active,
  };
});
---

<nav data-navbar>
  <div class={styles.navbar}>
    <Spacer size="30px" axis="horizontal" />
    <div class={styles.logo}>
      <a href={resolveHref("/")}>
        {
          logoAsset.url && (
            <img src={logoAsset.url} alt={logoAsset.alt ?? "Logo"} />
          )
        }
      </a>
    </div>
    <input
      type="checkbox"
      id="burger"
      class={styles.toggle}
      aria-controls="menu-panel"
    />
    <label class={styles.burger} for="burger" aria-label="Basculer le menu">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <label for="burger" class={styles.overlay} aria-hidden="true"></label>
    <div id="menu-panel" class={styles.menulist}>
      <ul>
        {
          menu.map((item) => (
            <li class={item.active ? styles.active : ""}>
              <a href={item.href}>{item.name}</a>
            </li>
          ))
        }
      </ul>
      <Spacer size="3rem" axis="vertical" />
      <CtaDevis label="Demander un devis" href={resolveUrl("/contact")} />
      {
        contactItems.length > 0 && (
          <div class={styles.menu_contacts}>
            {contactItems.map((item) => (
              <a
                class={styles.menu_contact}
                href={item.href}
                aria-label={item.label}
              >
                <span class={styles.menu_contact_icon}>
                  <Icon type={item.icon} color="var(--color-secondary)" />
                </span>
                <span class={styles.menu_contact_label}>{item.label}</span>
              </a>
            ))}
          </div>
        )
      }
      {
        (menuLogo.url || linkedInLink) && (
          <div class={styles.menu_footer}>
            {menuLogo.url && (
              <img
                src={menuLogo.url}
                alt={menuLogo.alt ?? "Logo"}
                class={styles.menu_logo}
              />
            )}
            {linkedInLink && (
              <a
                class={styles.menu_social}
                href={linkedInLink.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={linkedInLink.ariaLabel ?? "LinkedIn"}
              >
                <Icon
                  type={linkedInLink.icon ?? "linkedin"}
                  color="var(--color-secondary)"
                />
                <span>{linkedInLink.name}</span>
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
  {
    contactItems.length > 0 && (
      <div class={styles.contact_panel}>
        {contactItems.map((item) => (
          <a
            class={styles.contact_item}
            href={item.href}
            aria-label={item.label}
          >
            <span class={styles.contact_icon}>
              <Icon type={item.icon} color="var(--color-secondary)" />
            </span>
            <span class={styles.contact_label}>{item.label}</span>
          </a>
        ))}
      </div>
    )
  }
</nav>

<script src="./navbar.client.ts"></script>
