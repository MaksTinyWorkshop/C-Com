---
import Spacer from "./UI/Spacer.astro";
import SectionHeader from "@components/UI/SectionHeader.astro";
import type { TestimonialsSectionProps } from "@types/testimonials";

const { title, description, testimonials } =
  Astro.props as TestimonialsSectionProps;
---

<section class="section-container testimonials">
  <SectionHeader class="intro" title={title} description={description} />
  <div class="testimonials__grid">
    {
      testimonials.map((item) => (
        <figure class="testimonial">
          <blockquote>
            <p>{item.quote}</p>
          </blockquote>
          <figcaption>
            <span class="testimonial__author">{item.author}</span>
            {item.role && <span class="testimonial__role">{item.role}</span>}
          </figcaption>
        </figure>
      ))
    }
  </div>
  <Spacer size="1.5rem" />
</section>

<style>
  .testimonials {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .testimonials__grid {
    display: grid;
    gap: var(--space-3);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    width: min(960px, 100%);
    margin: 0 auto;
  }

  .testimonial {
    margin: 0;
    padding: var(--space-3);
    border-radius: 1.5rem;
    background: #fff;
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .testimonial blockquote {
    margin: 0;
  }

  .testimonial blockquote p {
    margin: 0;
    font-size: var(--step-0);
    line-height: 1.6;
    color: var(--color-base-content);
  }

  .testimonial blockquote p::before {
    content: "\201C";
    display: inline;
    font-size: var(--step-2);
    color: var(--color-primary);
    font-weight: 700;
    margin-right: 0.25rem;
  }

  .testimonial blockquote p::after {
    content: "\201D";
    display: inline;
    font-size: var(--step-2);
    color: var(--color-primary);
    font-weight: 700;
    margin-left: 0.25rem;
  }

  .testimonial__author {
    display: block;
    font-size: var(--step--1);
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .testimonial__role {
    display: block;
    font-size: var(--step--2);
    color: var(--color-neutral-content);
    margin-top: 0.25rem;
  }

  figcaption {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  @media (min-width: 960px) {
    .testimonials {
      gap: var(--space-4);
    }

    .testimonial blockquote p {
      font-size: var(--step-1);
    }
  }
</style>
